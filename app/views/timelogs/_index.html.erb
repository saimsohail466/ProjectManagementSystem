<table class="table table-hover">
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Task Description</th>
      <th>Working Hours</th>
      <th>Date of log</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody class="timelogs">
    <% @project.timelogs.each do |timelog| %>
      <tr id="<%= timelog.id %>">
        <td> <%= timelog.task_name %> </td>
        <td> <%= timelog.task_description %> </td>
        <td> <%= timelog.working_hours %> </td>
        <td> <%= timelog.date_of_log %> </td>
        <td> <%= link_to "", timelog, class: "fas fa-eye" %> </td>
       <% if current_user.id == timelog.user_id %>
        <td>
          <%= link_to "", edit_timelog_path(timelog), class: "fas fa-edit", id: "edit-this-timelog", remote: true, data: {toggle: "modal"}, data: {target: "#edit-timelog"} %> </td>
        <td> <%= link_to "", timelog, method: :delete, data: {confirm: "Are you Sure?"}, remote: true, class: "fas fa-trash" %> </td>
       <% else %>
        <td> <%= link_to "", "", class: "fas fa-edit", title: "disabled", style: "pointer-events: none" %> </td>
        <td> <%= link_to "", "", class: "fas fa-trash", title: "disabled", style: "pointer-events: none" %> </td>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="modal-backdrop fade show" style="display: none;"></div>
