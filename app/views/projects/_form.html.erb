<div class="container">
  <h2>New Project</h2>
  <%= form_with model: [client, project]  do |f| %>
    <% if project.errors.any? %>
        <ul>
          <% project.errors.full_messages.each do |error| %>
              <li> <%= error %> </li> 
          <% end %>
        </ul>
    <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="flex">
      
      <div class="half-width">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      
      <div class="half-width">
        <%= f.label :deadline %>
        <%= f.date_field :deadline, class: "form-control" %>
      </div>
      
    </div>

    <div>
      <%= f.label :question, "Question", class: "form-label" %>
      <%= f.text_field :question, class: "form-control" %>
    </div>

    <%= f.hidden_field :client_id , value: client.id %>
    
    <%= f.submit class: "btn btn-dark mt-3" %>
  
  <% end %>
</div>
