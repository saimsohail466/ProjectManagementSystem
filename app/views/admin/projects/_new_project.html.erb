<%= form_for project, url: admin_projects_path, method: :post, remote: true do |f| %>
  <% if project.errors.any? %>
        <ul>
          <% project.errors.full_messages.each do |error| %>
              <li> <%= error %> </li> 
          <% end %>
        </ul>
    <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="flex">
      
      <div class="half-width">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      
      <div class="half-width">
        <%= f.label :deadline %>
        <%= f.date_field :deadline, class: "form-control" %>
      </div>
      
    </div>

    <div>
      <%= f.label :question, "Question", class: "form-label" %>
      <%= f.text_field :question, class: "form-control" %>
    </div>

    <div>
      <%= f.label :client_id, "Client" %> <br>
      <%= f.select :client_id , options_from_collection_for_select(Client.all, "id", "firstname"), class: "form-control" %>
    </div>
    
    <%= f.submit class: "btn btn-dark mt-3" %>

<% end %>
