<!-- Model -->
<div class="modal fade" id="edit_project" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Project</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="removeFadeEffect()">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="project_errors"></div>
        <div class="modal-body">
          <div class="container">
            <h2>New Project</h2>
            <%= form_with model: [project], url: admin_project_path(project), id: "edit_project_form", method: :patch do |f| %>
              <% if project.errors.any? %>
                  <ul>
                    <% project.errors.full_messages.each do |error| %>
                        <li> <%= error %> </li> 
                    <% end %>
                  </ul>
              <% end %>

              <div>
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
              </div>

              <div>
                <%= f.label :description %>
                <%= f.text_field :description, class: "form-control" %>
              </div>

              <div class="flex">
                
                <div class="half-width">
                  <%= f.label :start_date %>
                  <%= f.date_field :start_date, class: "form-control" %>
                </div>
                
                <div class="half-width">
                  <%= f.label :deadline %>
                  <%= f.date_field :deadline, class: "form-control" %>
                </div>
                
              </div>

              <div>
                <%= f.label :question, "Question", class: "form-label" %>
                <%= f.text_field :question, class: "form-control" %>
              </div>

              <%= f.hidden_field :client_id , value: project.client_id %>
              
              <%= f.submit class: "btn btn-dark mt-3" %>
            
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

<script type="text/javascript">
  function removeFadeEffect() {
    $('#edit_project').css('display','none');
    $('body').removeClass('model-open'); 
    $('#fade').remove()
  }
</script>
