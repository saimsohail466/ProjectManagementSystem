<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>File</th>
    </tr>
  </thead>
  <tbody>
    <% counter = 0 %>
    <% @project.attachments.each do |attachment| %>
      <tr>
        <td> <%= counter += 1 %> </td>
        <td> <%= link_to attachment.attachment_file.identifier, attachment.attachment_file.url() %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
