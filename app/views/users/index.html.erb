<div class="container-fluid w-75 mt-4">
  <%= link_to "Add new User", new_admin_user_registration_path, class: "btn btn-success" %>
	<h5>Users</h5>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>First name</th>
				<th>Last name</th>
				<th>Email</th>
				<th>Contact</th>
				<th>Address</th>
				<th>Type</th>
				<% if current_user.admin? %>
          <th colspan="5">Actions</th>
        <% end %>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td> <%= user.firstname %> </td>
					<td> <%= user.lastname %> </td>
					<td> <%= user.email %> </td>
					<td> <%= user.contact %> </td>
					<td> <%= user.address %> </td>
					<td> <%= user.type_of %> </td>
          <td> <%= link_to "", user_path(user), class: "fas fa-eye", title: "view" %> </td>
          <% if current_user.admin? %>
              <td>  
                  <%= link_to "", edit_user_path(user), class: "fas fa-user-edit", title: "edit" %>
              </td>
              <td>
                <%= link_to "", user , method: :delete, data: { confirm: "Are you Sure?" }, class: "fas fa-trash", title: "delete" %>
              </td>

              <% if user.enable? and user.type_of != "Admin" %>
                  <td> <%= link_to "", disable_user_path(id: user) ,data: { confirm: "Are you Sure?" }, class: "fas fa-times", title: "disable" %> </td>
              <% else %>
                  <td> <%= link_to "", disable_user_path(id: user), data: { confirm: "Are you Sure?" }, class: "fas fa-check-circle", title: "enable" %> </td>  
              <% end %>

              <% if user.employee? %>
                  <td> <%= link_to "Manager Rights", give_manager_rights_path(id: user), data: { confirm: "Are you Sure? "} %> </td>
              <% end %>
          <% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
